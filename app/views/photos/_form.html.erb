<style type="text/css">
	p{
		display: block;
		margin-left: auto;
		margin-right: auto;
	}

</style>

<h1>Add a Photo</h1>

<div class="border-form-div">

<%= form_for [@parent, @photo], :url => special_thing(@parent), :html => { :multipart => true } do |form| %>

  <%= form.file_field :image %> <br>
  <%= form.submit :submit, :class=>"btn btn-info btn-lg" %>

<% end %>

</div>


<p>
<%= link_to 'Back' , back_button(@parent), :class=>"btn btn-primary btn-lg back-but" %>
</p>