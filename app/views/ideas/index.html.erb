<style type="text/css">
	.title{
		text-align: center;
	}
	img{
		display: block;
		margin-left: auto;
		margin-right: auto;
	    max-width: 350px;
	    height: 250px;
	    width: auto;
	}

</style>


<h1>Ideas Index</h1>


<div class="row row-centered">
<% @ideas.each do | idea |%>
	<div class="col-sm-6 col-md-4 col-lg-3 col-centered item-image-box">
		
		<% if idea.photos.first %>
			<td><%= image_tag((idea.photos.first.id.to_s + "/" + idea.photos.first.image_file_name)) %></td>
		<% else %>
			<%= link_to image_tag('default-image.png'), idea_path(idea) %>
		<% end %>
		<p class="title"> <%= idea.name %> </p>

	</div>
<% end %>
</div>

<div>
<p> <%= link_to 'add an idea', new_idea_path %> </p>
</div>
