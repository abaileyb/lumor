<%= grid(@orders_grid, html: {class: 'my-grid'}, hide_csv_button: true) do |g|

  g.column name:  'Name' do |order|
    order.name
  end

  g.column name:  'Size'  do |order|
    order.size
  end

  g.column  name:  'Comment' do |order|
    order.comment
  end

  g.column  name:  'price' do |order|
    order.price
  end

end %>