<h1> <%= @item.name %> $<%= @item.price %> </h1>
<h2> <%= @item.description %> </h2>

<p> <%= form_tag item_charges_path(@item) do %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="AEPi Omega D"
          data-description=<%= @item.name %> 
          data-amount=<%= @item.price * 100 %> 
          data-email=<%= current_user.email %> >
 </script>


<% end %>
 </p>

<% if policy(@item).update? %>

<p> <%= link_to 'Edit', edit_item_path(@item) %> </p>
<p> <%= link_to 'Destroy', item_path(@item), method: :delete, data:{ confirm: "Are you sure?" } %> </p>

<% end %>